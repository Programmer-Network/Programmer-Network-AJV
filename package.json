{
  "name": "programmer-network-ajv",
  "description": "A JSON Schema Validator",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --watch",
    "pre-commit": "lint-staged",
    "format": "prettier --write \"**/*.+(js|json|css|md)\"",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.+(js)": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ],
    "*.+(json|md)": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "ajv": "^8.12.0",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^2.1.1",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8"
  }
}
